generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  user_id Int    @id @default(autoincrement())
  senha   String
  email   String @unique
  lists   List[]
}

model List {
  list_id   Int    @id @default(autoincrement())
  list_name String
  priority  String @default("Baixa")
  user_id   Int
  user      User   @relation(fields: [user_id], references: [user_id])
}


model Item {
  item_id    BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) 
  edited_at  DateTime @default(now()) @updatedAt
  item_name  String
  finished   Boolean
  priority   String
  list_id    BigInt
}
